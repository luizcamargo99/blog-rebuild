<div class="info-post">
    <img src="@($"data:image/png;base64,{Convert.ToBase64String(Photo)}")" />
    <span class="author-name-small" @onclick='()=> { navigationManager.NavigateTo($"/author/{Name.RemoveSpecialCharacter()}"); }'>@Name</span>
    <span>@Date.ToString("dd/MM/yyyy")</span>
</div>

@code {
    [Parameter]
    public byte[] Photo { get; set; }

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public DateTime Date { get; set; }
}
